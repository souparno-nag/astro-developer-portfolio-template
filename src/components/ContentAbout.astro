    ]
};

// Contact function
const contact = (type: ContactType): string => {
    switch (type) {
        case 'github':
            return 'https://github.com/souparno-nag';
        case 'linkedIn':
            return 'https://www.linkedin.com/in/souparno-nag-10994228b';
        case 'email':
            return 'souparno.nag2023@vitstudent.ac.in';
